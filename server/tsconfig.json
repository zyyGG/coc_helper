{
  "compilerOptions": {
    "rootDir": "./",
    "module": "CommonJS", //指定使用模块: 'commonjs', 'amd', 'system', 'umd' or 'es2015'
    "esModuleInterop": true,
    "outDir": "./build",
    "moduleResolution": "Node",
    "target": "ESNext", //指定 ECMAScript 目标版本:
    "strict": true,
    "incremental": true, //只编译修改过的文件
    "removeComments": true, //编译的时候删除注释文件
  },
  "include": [ //需要编译的文件
    "./index.ts",
  ],
  "exclude": [ // 不需要编译的文件
    "node_modules",
  ]
}